    width = dw[np.argmin(abs(P_dw-0.5))]/2/np.pi/1e3
    plot(f_plot, P_dw, label=f'$T = {Tth}$K, width = {width:.2f}KHz \n$\Delta f/f_0 = {width/f0*1e3:.1e}$')
plt.xlabel('Frequency (MHz)')
